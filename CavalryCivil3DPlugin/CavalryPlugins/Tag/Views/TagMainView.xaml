<Window x:Class="CavalryCivil3DPlugin.CavalryPlugins.Tag.Views.TagMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CavalryCivil3DPlugin.CavalryPlugins.Tag.Views"
             mc:Ignorable="d"
             xmlns:converter="clr-namespace:CavalryCivil3DPlugin.WPFSupportFunctions.Supports"
             Icon="pack://application:,,,/CavalryCivil3DPlugin;component/Icons/CavalryLogo_16.ico"
             Title="Cavalry - Tag Objects"
             Width="450"
             MinHeight="150"
             MaxHeight="173"
             MinWidth="400"
             MaxWidth="600"
             WindowStartupLocation="CenterScreen"
             >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CavalryCivil3DPlugin;component/SourceFiles/WPFStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converter:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Margin="5 5 5 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="94"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Margin="0 0 0 0" Grid.Column="0">
                <Border Padding="5 10 5 5">
                    <StackPanel>
                        <RadioButton Content="Single"
                                     IsChecked="{Binding SelectedMethod,
                                     Converter={StaticResource EnumToBooleanConverter},
                                     ConverterParameter=Single}"/>

                        <RadioButton Content="Multiple" Margin="0 11 0 11"
                                     IsChecked="{Binding SelectedMethod,
                                     Converter={StaticResource EnumToBooleanConverter},
                                     ConverterParameter=Multiple}"/>   
                        
                        <RadioButton Content="All"
                                     IsChecked="{Binding SelectedMethod,
                                     Converter={StaticResource EnumToBooleanConverter},
                                     ConverterParameter=All}"/> 
                        
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Margin="5 0 0 0" Grid.Column="1">
                <Border Padding="5">
                    <StackPanel>
                        <DockPanel Margin="0 2 0 0">
                            <TextBlock Text="Object:" VerticalAlignment="Center"/>
                            <ComboBox Height="23" Margin="30 0 0 0" Style="{StaticResource CustomComboBoxStyle}" 
                                      ItemsSource="{Binding Path=TagMainModel.KeyPlanTagCollection.ObjectTagCollection}"
                                      SelectedItem="{Binding Path=SelectedObjectTag}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </DockPanel>
                        
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock Text="Filter by:" Margin="0 5 0 5" VerticalAlignment="Center" />
                            <ComboBox Height="23" Margin="22.5 0 0 0" Style="{StaticResource CustomComboBoxStyle}"
                                      ItemsSource="{Binding Path=TagMainModel.FilterModelCollection.Filters}"
                                      SelectedItem="{Binding Path=SelectedFilterType}"
                                      IsEnabled="{Binding Multiple}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Name}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </DockPanel>

                        <DockPanel>
                            <TextBlock Text="Filter Value: " VerticalAlignment="Center"/>
                            <ComboBox x:Name="FilterKeysCMB"
                                      Height="23" Margin="3.5 0 0 0" Style="{StaticResource CustomComboBoxStyle}"
                                      ItemsSource="{Binding Path=SelectedFilterType.FilterKeys}"
                                      SelectedItem="{Binding SelectedFilterKey_, Mode=TwoWay}"
                                      IsEnabled="{Binding Multiple}"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Margin="0 5 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="79.5"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Cavalry Tag:" Grid.Column="1" Margin="11 0 0 0" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="2" Height="23" Style="{StaticResource CustomComboBoxStyle}"
                      ItemsSource="{Binding Path=SelectedObjectTag.AvailableTagTypes}"
                      SelectedItem="{Binding SelectedTag}">
                
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <Button Content="Add" Grid.Column="3" Height="20" Margin="5 0 0 0" Style="{StaticResource bstyle1}" Width="35" Command="{Binding Path=AddTagCommand}"/>
            
        </Grid>
        
    </Grid>
</Window>
