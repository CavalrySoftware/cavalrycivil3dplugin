<Window x:Class="CavalryCivil3DPlugin.CavalryPlugins.ExtractSOP.Views.SOPMainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CavalryCivil3DPlugin.CavalryPlugins.ExtractSOP.Views"
             mc:Ignorable="d" 
             Height="300" 
             Width="600"
             MinWidth="500"
             MaxWidth="800"
             WindowStartupLocation="CenterScreen"
             Icon="pack://application:,,,/CavalryCivil3DPlugin;component/Icons/CavalryLogo_16.ico"
             Title="Cavalry - Extract SOP">
    

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CavalryCivil3DPlugin;component/SourceFiles/WPFStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Margin="7">

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="45"/>
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0">
                <TextBlock Text="Existing:"/>
                <ComboBox Margin="5 0 0 0" ItemsSource="{Binding Path=SOPMainModel_.SurfaceModelCollection_.SurfaceModels}"
                          SelectedItem="{Binding Path=ExistingSurface}"
                          Style="{StaticResource CustomComboBoxStyle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </DockPanel>

            <DockPanel Grid.Column="1" Margin="20 0 0 0">
                <TextBlock Text="Design:"/>
                <ComboBox Margin="5 0 0 0" ItemsSource="{Binding Path=SOPMainModel_.SurfaceModelCollection_.SurfaceModels}"
                          SelectedItem="{Binding Path=DesignSurface}"
                          Style="{StaticResource CustomComboBoxStyle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </DockPanel>

            <Button Grid.Column="2" Margin=" 20 0 0 0" Width="18" 
                    VerticalAlignment="Center" 
                    DockPanel.Dock="Right" 
                    Style="{StaticResource bstyle2}"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=PickPolylineCommand}">
                <Image Source="pack://application:,,,/CavalryCivil3DPlugin;component/Icons/SelectElements_32.ico"/>
            </Button>
        </Grid>

        
        <Grid Grid.Row="1">
            <ListView
                      AlternationCount="2"
                      ItemContainerStyle="{StaticResource ListViewStyle}"
                      Grid.Row="1"
                      Margin="0 5 0 0"
                      VerticalAlignment="Stretch"
                      Height="Auto"
                      ItemsSource ="{Binding Path=SOPObjectModel}"
                >

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Point" DisplayMemberBinding="{Binding PointName}"/>
                        <GridViewColumn Header="Easting" DisplayMemberBinding="{Binding X}"/>
                        <GridViewColumn Header="Northing" DisplayMemberBinding="{Binding Y}"/>
                        <GridViewColumn Header="Existing Elevation" DisplayMemberBinding="{Binding ExistingElevation}"/>
                        <GridViewColumn Header="Design Elevation" DisplayMemberBinding="{Binding DesignElevation}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid Grid.Row="2" Margin="3 10 0 3" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0">
                <CheckBox Grid.Column="0" Content="Annotate" HorizontalAlignment="Left" VerticalAlignment="Center" IsChecked="{Binding Path=IsAnnotate}"/>
                <TextBox Margin="10 0 0 0" Width="45" HorizontalAlignment="Left" Height="25" Text="{Binding Path=Prefix}" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <ComboBox Margin="10 0 24 0" ItemsSource="{Binding Path=SOPMainModel_.TableStyleModel_.ExistingStyleNames}" Style="{StaticResource CustomComboBoxStyle}" SelectedItem="{Binding Path=TableStyle}"/>
            </DockPanel>

            <DockPanel Grid.Column="1">
                <Button Content="Ok" Width="30" HorizontalAlignment="Right" Style="{StaticResource  bstyle1}" Command="{Binding Path=OkCommand}"/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
