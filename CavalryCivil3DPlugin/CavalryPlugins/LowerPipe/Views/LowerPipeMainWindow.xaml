<Window x:Class="CavalryCivil3DPlugin.CavalryPlugins.LowerPipe.Views.LowerPipeMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:CavalryCivil3DPlugin.CavalryPlugins.LowerPipe.Views"
             xmlns:local2="clr-namespace:CavalryCivil3DPlugin.CavalryPlugins.LowerPipe.ViewModels"
             mc:Ignorable="d"
             xmlns:converter="clr-namespace:CavalryCivil3DPlugin.WPFSupportFunctions.Supports"
             Width="700"
             Height="550"
             Title="Cavalry - Lowering of Pipes"
             MaxHeight="700"
             MaxWidth="800"
             MinWidth="475"
             MinHeight="500"
             Icon="pack://application:,,,/CavalryCivil3DPlugin;component/Icons/CavalryLogo_16.ico">

    
    <Window.Resources>
         <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CavalryCivil3DPlugin;component/SourceFiles/WPFStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="LineTemplate">
                <Line X1="{Binding X1}" Y1="{Binding Y1}"
                      X2="{Binding X2}" Y2="{Binding Y2}"
                      Stroke="{Binding Fill}" StrokeThickness="{Binding StrokeThickness}"/> 
            </DataTemplate>

            <DataTemplate x:Key="CircleTemplate">
                <Ellipse
                    Width="{Binding Diameter}"
                    Height="{Binding Diameter}"
                    Fill="{Binding Fill}"
                    Stroke="{Binding Stroke}"
                    StrokeThickness="{Binding StrokeThickness}"
                    Canvas.Left="{Binding X}"
                    Canvas.Top="{Binding Y}">
                    
                </Ellipse>
            </DataTemplate>

            <DataTemplate x:Key="TextTemplate">
                <TextBlock Text="{Binding Text}"
                           FontSize="{Binding FontSize}"
                           Foreground="{Binding Fill}" 
                           HorizontalAlignment="Center"/>
            </DataTemplate>

            <local2:ShapeTemplateSelector x:Key="ShapeSelector"
                                          LineTemplate="{StaticResource LineTemplate}"
                                          TextTemplate="{StaticResource TextTemplate}"
                                          CircleTemplate="{StaticResource CircleTemplate}"/>
        </ResourceDictionary>
    </Window.Resources>



    <Grid Margin="0 5 0 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200"/>
            <ColumnDefinition MinWidth="250"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="200"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Margin="5">
            <Grid Margin="7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    
                </Grid.RowDefinitions>

                <DockPanel Margin="0 3 0 3" Grid.Row="0">
                    <TextBlock Text="Vertical Clearance: " Height="20"/>
                    <TextBlock Text="m" DockPanel.Dock="Right" Margin="4 0 2 0" Foreground="{StaticResource DarkAccent}" Height="20"/>
                    <TextBox Text="{Binding Path=VerticalClearance, UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource Blue1}" VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="KeyDown">
                                <i:CallMethodAction 
                                    MethodName="EnterValue" 
                                    TargetObject="{Binding}" />
                            </i:EventTrigger>

                            <i:EventTrigger EventName="LostFocus">
                                <i:CallMethodAction TargetObject="{Binding}" MethodName="InputLostFocus" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </DockPanel>

                <DockPanel Grid.Row="1" Margin="0 3 0 3">
                    <TextBlock Text="Crossing Length: " Margin="0 0 8 0" Height="20"/>
                    <TextBlock Text="m" DockPanel.Dock="Right" Margin="4 0 2 0" Foreground="{StaticResource DarkAccent}" Height="20" />
                    <TextBox Text="{Binding Path=CrossingLength, UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource Blue1}" VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="KeyDown">
                                <i:CallMethodAction 
                                        MethodName="EnterValue" 
                                        TargetObject="{Binding}" />
                            </i:EventTrigger>
                            
                            <i:EventTrigger EventName="LostFocus">
                                <i:CallMethodAction TargetObject="{Binding}" MethodName="InputLostFocus" />
                            </i:EventTrigger>
                            
                        </i:Interaction.Triggers>
                    </TextBox>
                </DockPanel>

                <DockPanel Margin="0 3 0 3" Grid.Row="2">
                    <TextBlock Text="Max Deflection: " Margin="0 0 13.5 0" Height="20"/>
                    <TextBlock Text="d°" DockPanel.Dock="Right" Margin="2.75 0 2 0" Foreground="{StaticResource DarkAccent}" Height="20"/>
                    <TextBox Text="{Binding Path=MaxDeflection, UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource Blue1}" VerticalContentAlignment="Center">
                        <i:Interaction.Triggers>
                            
                            <i:EventTrigger EventName="KeyDown">
                                <i:CallMethodAction 
                                    MethodName="EnterValue" 
                                    TargetObject="{Binding}" />
                            </i:EventTrigger>
                            
                            <i:EventTrigger EventName="LostFocus">
                                <i:CallMethodAction TargetObject="{Binding}" MethodName="InputLostFocus" />
                            </i:EventTrigger>
                            
                        </i:Interaction.Triggers>
                    </TextBox>
                </DockPanel>

                <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Margin="0 0 0 5">
                    <CheckBox Content="Modify Pipe" Margin="0 8 0 8" IsChecked="{Binding Path=ModifyPipe}"/>
                    <CheckBox Content="Delete Profile" IsChecked="{Binding Path=DeleteProfile}"/>
                </StackPanel>
            </Grid>
        </Border>

        
        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Margin="0 5 5 5" Padding="5" Background="#F0F8FF">
                <TextBlock Text="{Binding Path=Status}" VerticalAlignment="Stretch" TextWrapping="Wrap" Foreground="{StaticResource Blue1}"/>
            </Border>
            <Button Width="18" 
                    VerticalAlignment="Center" 
                    DockPanel.Dock="Right" 
                    Style="{StaticResource bstyle2}"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=PickPressurePipes}"
                    Grid.Row="1"
                    Margin="0 0 5 0">
                <Image Source="pack://application:,,,/CavalryCivil3DPlugin;component/Icons/SelectElements_32.ico"/>
            </Button>
        </Grid>
        

        <!-- Fixed canvas frame -->
        <Border Grid.Row="1" Background="Black" Grid.ColumnSpan="2" Margin="5" Style="{StaticResource Basic}">
            <Grid ClipToBounds="True">
                <Canvas x:Name="DrawingCanvas" Background="Transparent">
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="{Binding Zoom}" ScaleY="{Binding Zoom}" />
                            <TranslateTransform X="{Binding OffsetX}" Y="{Binding OffsetY}" />
                        </TransformGroup>
                    </Canvas.RenderTransform>

                    <i:Interaction.Behaviors>
                        <local2:ZoomPanBehavior/>
                    </i:Interaction.Behaviors>

                    <ItemsControl ItemsSource="{Binding Path=CanvasModel_.Shapes}" ItemTemplateSelector="{StaticResource ShapeSelector}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Canvas.Left" Value="{Binding X}" />
                                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                    </ItemsControl>
                    <Rectangle Width="1000" Height="800"
                               Fill="Transparent" Stroke="Transparent" StrokeThickness="1"
                               Canvas.Left="-125" Canvas.Top="-250" />
                </Canvas>
            </Grid>
        </Border>

        <DockPanel Grid.Row="2" HorizontalAlignment="Right" Grid.Column="1" Margin="0 0 5 0">
            <Button x:Name="OK" Content="Ok" Style="{StaticResource bstyle1}" Margin="0 0 5 0" Command="{Binding Path=OkCommand}"/>
            <Button x:Name="APPLY" Content="Apply" Style="{StaticResource bstyle1}" Margin="0 0 5 0" Command="{Binding Path=ApplyCommand}"/>
            <Button x:Name="CANCEL" Content="Cancel" Style="{StaticResource bstyle1}" Command="{Binding Path=CancelCommand_}"/>
        </DockPanel>
    </Grid>
    
</Window>
