<Window x:Class="CavalryCivil3DPlugin.CavalryPlugins.LowerPipe.Views.LowerPipeMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:CavalryCivil3DPlugin.CavalryPlugins.LowerPipe.Views"
             xmlns:local2="clr-namespace:CavalryCivil3DPlugin.CavalryPlugins.LowerPipe.ViewModels"
             mc:Ignorable="d" 
             xmlns:converter="clr-namespace:CavalryCivil3DPlugin.WPFSupportFunctions.Supports"
             Width="600"
             Height="500"
             Title="Cavalry - Lower Pipe"
             MaxHeight="700"
             MaxWidth="800">

    
    <Window.Resources>
        <ResourceDictionary>
            <converter:EmptyToZeroConverter x:Key="EmptyToZeroConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CavalryCivil3DPlugin;component/SourceFiles/WPFStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid Margin="0 5 0 5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Margin="5">
            <StackPanel Margin="7">
                <DockPanel Margin="0 5 0 5">
                    <TextBlock Text="Vertical Clearance: " Height="20"/>
                    <TextBlock Text="m" DockPanel.Dock="Right" Margin="3 0 2 0" Foreground="{StaticResource DarkAccent}" Height="20"/>
                    <TextBox Text="{Binding Path=VerticalClearance}" Foreground="{StaticResource Blue1}"/>
                </DockPanel>

                <DockPanel>
                    <TextBlock Text="Crossing Length: " Margin="0 0 8 0" Height="20"/>
                    <TextBlock Text="m" DockPanel.Dock="Right" Margin="3 0 2 0" Foreground="{StaticResource DarkAccent}" Height="20"/>
                    <TextBox Text="{Binding Path=CrossingLength}" Foreground="{StaticResource Blue1}"/>
                </DockPanel>

                <DockPanel Margin="0 5 0 5">
                    <TextBlock Text="Max Deflection: " Margin="0 0 13.5 0" Height="20"/>
                    <TextBlock Text="d°" DockPanel.Dock="Right" Margin="1.5 0 2 0" Foreground="{StaticResource DarkAccent}" Height="20"/>
                    <TextBox Text="{Binding Path=MaxDeflection}" Foreground="{StaticResource Blue1}"/>
                </DockPanel>

                <CheckBox Content="Modify Pipe" Margin="0 8 0 8" IsChecked="{Binding Path=ModifyPipe}"/>
                <CheckBox Content="Delete Profile" IsChecked="{Binding Path=DeleteProfile}"/>
            </StackPanel>
        </Border>

        

        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Margin="0 5 5 5" Padding="5" Background="#F0F8FF">
                <TextBlock Text="{Binding Path=Status}" VerticalAlignment="Stretch" TextWrapping="Wrap" Foreground="{StaticResource Blue1}"/>
            </Border>
            <Button Width="18" 
                    VerticalAlignment="Center" 
                    DockPanel.Dock="Right" 
                    Style="{StaticResource bstyle2}"
                    HorizontalAlignment="Right"
                    Command="{Binding Path=PickPolylinesCommand}"
                    Grid.Row="1"
                    Margin="0 0 5 0">
                <Image Source="pack://application:,,,/CavalryCivil3DPlugin;component/Icons/SelectElements_32.ico"/>
            </Button>
        </Grid>
        

        <!-- Fixed canvas frame -->
        <Border Grid.Row="1" Background="Black" Grid.ColumnSpan="2" Margin="5" Style="{StaticResource Basic}">
            <Grid ClipToBounds="True">
                <Canvas x:Name="DrawingCanvas">
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="{Binding Zoom}" ScaleY="{Binding Zoom}" />
                            <TranslateTransform X="{Binding OffsetX}" Y="{Binding OffsetY}" />
                        </TransformGroup>
                    </Canvas.RenderTransform>

                    <i:Interaction.Behaviors>
                        <local2:ZoomPanBehavior />
                    </i:Interaction.Behaviors>

                    <ItemsControl ItemsSource="{Binding Shapes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Canvas.Left" Value="{Binding X}" />
                                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Rectangle Width="{Binding Width}" Height="{Binding Height}"
                                           Fill="{Binding Fill}" Stroke="Black" StrokeThickness="1" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
            </Grid>
            
        </Border>

        <DockPanel Grid.Row="2" HorizontalAlignment="Right" Grid.Column="1" Margin="0 0 5 0">
            <Button x:Name="OK" Content="Ok" Style="{StaticResource bstyle1}" Margin="0 0 5 0" Command="{Binding Path=ExtractCoordinatesCommand}"/>
            <Button x:Name="CANCEL" Content="Cancel" Style="{StaticResource bstyle1}" Command="{Binding Path=CancelCommand}"/>
        </DockPanel>

    </Grid>
</Window>
