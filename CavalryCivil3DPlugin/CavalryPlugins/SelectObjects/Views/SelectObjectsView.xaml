<Window x:Class="CavalryCivil3DPlugin.CavalryPlugins.SelectObjects.Views.SelectObjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CavalryCivil3DPlugin.CavalryPlugins.SelectObjects.Views"
             Icon="pack://application:,,,/CavalryCivil3DPlugin;component/Icons/CavalryLogo_16.ico"
             mc:Ignorable="d" 
             Height="275" 
             Width="320"
             MinWidth="300"
             MinHeight="275"
             MaxWidth="500"
             MaxHeight="275"
             Title="Cavalry - Object Selection"
             WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CavalryCivil3DPlugin;component/SourceFiles/WPFStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Margin="5" Grid.Row="0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Object Type:" Grid.Row="0" Grid.Column="0" Margin="0 2 0 2" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Margin="0 2 0 2" Style="{StaticResource CustomComboBoxStyle}"
          ItemsSource="{Binding Path=SelectObjectsMainModel.ObjectCollectionModel.ObjectModels}"
          SelectedItem="{Binding Path=SelectedObjectModel}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Property Type:" Grid.Row="2" Grid.Column="0" Margin="0 2 0 2" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Margin="0 2 0 2" Style="{StaticResource CustomComboBoxStyle}" 
                          ItemsSource="{Binding Path= SelectObjectsMainModel.PropertyCollection.PropertyTypeModels}"
                          SelectedItem="{Binding Path=SelectedPropertyType}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Layer:" Grid.Row="1" Grid.Column="0" Margin="0 2 0 2" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" Grid.Column="1" Margin="0 2 0 2" Style="{StaticResource CustomComboBoxStyle}"
                          ItemsSource="{Binding Path=SelectObjectsMainModel.LayerCollection.Layers}"
                          SelectedItem="{Binding Path=SelectedLayer}">
                </ComboBox>

                <TextBlock Text="Property Set:" Grid.Row="3" Grid.Column="0" Margin="0 2 0 2" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="3" Grid.Column="1" Margin="0 2 0 2" Style="{StaticResource CustomComboBoxStyle}"
                          ItemsSource="{Binding Path=SelectedPropertyType.Properties}"
                          SelectedItem="{Binding Path=SelectedProperty}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Property Field:" Grid.Row="4" Grid.Column="0" Margin="0 2 0 2" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="4" Grid.Column="1" Margin="0 2 0 2" Style="{StaticResource CustomComboBoxStyle}"
                          ItemsSource="{Binding Path=SelectedProperty.Fields}"
                          SelectedItem="{Binding Path=SelectedPropertyField}">
                </ComboBox>

                <TextBlock Text="Property Value:" Grid.Row="5" Grid.Column="0" Margin="0 2 0 2" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="5" Grid.Column="1" Margin="0 2 0 2" Style="{StaticResource CustomComboBoxStyle}">
                </ComboBox>
            </Grid>
        </Border>

        <DockPanel Grid.Row="1" Margin="12 2 7 7" VerticalAlignment="Center">
            <TextBlock Text="Total:"/>
            <TextBlock Text="{Binding Path=TotalObjects}" Margin="5 0 0 0"/>
        </DockPanel>
        <Button Content="Ok" Grid.Row="1" Grid.Column="1" Margin="0 2 7 7" Style="{StaticResource bstyle1}" HorizontalAlignment="Right" Width="40"/>

    </Grid>

    
    
</Window>
